<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_bottom_round"
                android:scaleType="centerCrop"
                android:src="@drawable/banner4">
            </com.google.android.material.imageview.ShapeableImageView>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_background_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:background="@drawable/bg_top"
                android:scaleType="centerCrop"></com.google.android.material.imageview.ShapeableImageView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_bg"
                    android:padding="12dp"
                    android:src="@drawable/ic_baseline_person_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:maxWidth="260dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxWidth="260dp"
                        android:text="Seja Bem Vindo ao Educa móvel"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@android:color/white"
                        android:textSize="23sp" />



                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            android:elevation="2dp"
            app:cardElevation="2dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            >
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <de.hdodenhof.circleimageview.CircleImageView
                  android:layout_width="45dp"
                  android:layout_gravity="center"
                  android:layout_marginStart="20dp"
                  android:layout_height="45dp"
                  android:src="@mipmap/ic_launcher_round"
                  />

              <LinearLayout
                  android:layout_marginStart="20dp"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:layout_height="match_parent">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Localização"
                      android:textSize="18sp"
                      android:textAppearance="@style/TextAppearance.AppCompat.Title"
                      />

                  <TextView
                      android:id="@+id/tv_location"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="6dp"
                      android:text="Manhiça"
                      />
              </LinearLayout>


              <LinearLayout
                  android:layout_width="100dp"
                  android:gravity="center"
                  android:background="@android:color/black"
                  android:layout_height="match_parent">

                  <TextView
                      android:id="@+id/tv_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="10H - 15H"
                      android:layout_gravity="center"
                      android:textColor="@android:color/white"
                      />

              </LinearLayout>

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navegue no educa"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_concourse"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:clipToPadding="true"
                app:cardBackgroundColor="#FBFAFA"
                app:cardElevation="1dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:layout_height="250dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exhibitor2"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_bottom"
                    android:alpha="0.8"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        android:text="Concurso"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        style="@style/TextAppearance.AppCompat.Title"
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_book"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:clipToPadding="true"
                app:cardBackgroundColor="#FBFAFA"
                app:cardElevation="1dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:layout_height="250dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exhibitor2"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_bottom"
                    android:alpha="0.8"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        android:text="Livros"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        style="@style/TextAppearance.AppCompat.Title"
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>





        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_video"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:clipToPadding="true"
                app:cardBackgroundColor="#FBFAFA"
                app:cardElevation="1dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:layout_height="250dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exhibitor2"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_bottom"
                    android:alpha="0.8"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        android:text="Videos"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        style="@style/TextAppearance.AppCompat.Title"
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:id="@+id/card_news"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:clipToPadding="true"
                app:cardBackgroundColor="#FBFAFA"
                app:cardElevation="1dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:layout_height="250dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exhibitor2"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_bottom"
                    android:alpha="0.8"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        android:text="Novidades"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        style="@style/TextAppearance.AppCompat.Title"
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_programing_tutor"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:clipToPadding="true"
                app:cardBackgroundColor="#FBFAFA"
                app:cardElevation="1dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:layout_height="250dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exhibitor2"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_bottom"
                    android:alpha="0.8"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        android:text="Tutorial de programação"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        style="@style/TextAppearance.AppCompat.Title"
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_vocational_test"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:clipToPadding="true"
                app:cardBackgroundColor="#FBFAFA"
                app:cardElevation="1dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:layout_height="250dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exhibitor2"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_bottom"
                    android:alpha="0.8"
                    android:layout_height="match_parent">
                </com.makeramen.roundedimageview.RoundedImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        android:text="Teste Vocacional"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        style="@style/TextAppearance.AppCompat.Title"
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>